{
    "name": "utd-chess-bots",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "workspaces": [
        "src/client",
        "src/server"
    ],
    "engines": {
        "node": ">= 20"
    },
    "scripts": {
        "dev": "tsc --noEmit && node --no-warnings=ExperimentalWarning --loader ts-node/esm/transpile-only src/server/main.ts",
        "devup": "nodemon src/server/main.ts",
        "start": "NODE_ENV=production ts-node ./src/server/main.ts",
        "build": "vite build",
        "docs:build": "typedoc",
        "docs:dev": "nodemon --exec 'yarn run docs:build' --watch ./tsconfig.json,./src/**/*,./docs/**/*",
        "test": "vitest",
        "format": "prettier --write src/**",
        "format-check": "prettier --check src/**",
        "lint": "eslint . --fix --report-unused-disable-directives --max-warnings 0",
        "lint-check": "eslint . --report-unused-disable-directives --max-warnings 0"
    },
    "dependencies": {
        "cbor-x": "^1.6.0",
        "chess.js": "^1.4.0",
        "typescript": "^5.9.2",
        "vite-express": "^0.11.1"
    },
    "devDependencies": {
        "@eslint/compat": "^1.3.2",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.36.0",
        "@types/node": "^20.19.17",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "@vitejs/plugin-react": "^3.1.0",
        "eslint": "^9.36.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "eslint-plugin-tsdoc": "^0.4.0",
        "globals": "^16.4.0",
        "lunr": "^2.3.9",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "typedoc": "^0.28.13",
        "vite": "^4.5.14",
        "vitest": "^3.2.4"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.9"
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
